<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.show_sql">true</property>  
 	 <!--   <property name="hbm2ddl.auto">create</property> -->    
          
       
        <mapping class="com.mss.app.entity.Address"/>        
        <mapping class="com.mss.app.entity.Brand"/> 
        <mapping class="com.mss.app.entity.Category"/> 
        <mapping class="com.mss.app.entity.Product"/> 
        <mapping class="com.mss.app.entity.Customer"/>  
        <mapping class="com.mss.app.entity.Order"/>        
        <mapping class="com.mss.app.entity.DatabaseCartdetail"/>
          
    </session-factory>
</hibernate-configuration>
